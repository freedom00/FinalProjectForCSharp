<Window x:Class="FinalProjectForCSharp.SortByDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectForCSharp"
        mc:Ignorable="d"
        Title="SortByDialog" Height="350" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="Sort By" HorizontalAlignment="Left" Height="140" VerticalAlignment="Top" Width="273" Margin="83,44,0,0">
            <Grid>
                <RadioButton x:Name="rbId" IsChecked="True" Content="Id" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,50,0,0" />
                <RadioButton x:Name="rbName" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,0,0" />
                <RadioButton x:Name="rbCars" Content="Cars" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="176,50,0,0" />
            </Grid>
        </GroupBox>
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="83,254,0,0" />
        <Button x:Name="btApply" Click="btApply_Click" Content="Apply" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="281,254,0,0" />
    </Grid>
</Window>